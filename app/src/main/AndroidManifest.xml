<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jtech.imaging">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".JApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        //欢迎页
        <activity android:name=".view.activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>
        //主页
        <activity android:name=".view.activity.MainActivity" />
        //授权认证
        <activity android:name=".view.activity.OauthActivity" />
        //搜索页
        <activity android:name=".view.activity.SearchActivity" />
        //图片详情
        <activity android:name=".view.activity.PhotoDetailActivity" />
        //设置壁纸页面
        <activity android:name=".view.activity.WallpaperActivity" />
        //画廊页面
        <activity android:name=".view.activity.GalleryActivity" />
        //下载管理页
        <activity
            android:name=".view.activity.DownloadActivity"
            android:theme="@style/AppThemeWithStatus" />
        //随机页面
        <activity
            android:name=".view.activity.RandomActivity"
            android:theme="@style/Theme.AppCompat.Translucent" />
        //网络状态变化广播接收
        <receiver
            android:name=".receiver.ConnectionChangeReceiver"
            android:label="NetworkConnection">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>